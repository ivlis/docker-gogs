APP_NAME = ${APP_NAME}
RUN_USER = git
RUN_MODE = prod

[database]
DB_TYPE  = postgres
HOST     = db:5432
NAME     = gogs
USER     = postgres
PASSWD   =
SSL_MODE = disable
; PATH     = data/gogs.db

[repository]
ROOT = /data/git/gogs-repositories

[server]
DOMAIN       = ${VIRTUAL_HOST}
HTTP_PORT    = 3000
ROOT_URL     = ${PUBLIC_PROTO}://${VIRTUAL_HOST}/
DISABLE_SSH  = false
SSH_PORT     = ${PUBLIC_SSH_PORT}
OFFLINE_MODE = false

[mailer]
ENABLED = false

[service]
REGISTER_EMAIL_CONFIRM = false
ENABLE_NOTIFY_MAIL     = false
DISABLE_REGISTRATION   = false
ENABLE_CAPTCHA         = true
REQUIRE_SIGNIN_VIEW    = false

[picture]
DISABLE_GRAVATAR        = false
ENABLE_FEDERATED_AVATAR = false

[session]
PROVIDER = file

[log]
MODE      = file
LEVEL     = Info
ROOT_PATH = /app/gogs/log

[security]
INSTALL_LOCK = true
SECRET_KEY   = ${SECRET_KEY}

[cache]
ADAPTER = redis
HOST = network=tcp,addr=redis:6379,db=0,pool_size=100,idle_timeout=180
